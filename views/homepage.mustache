<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>User Directory</title>
    <link rel="stylesheet" href="/public/styles.css">
  </head>
  <body>
    <section class = "wrapper">
      {{#users}}
      <section class = "employees"
        <a><img src="{{avatar}}"></a>
        <a href="./{{id}}"><h3>{{name}}</h3></a>
        {{#job}}
          <p>{{job}}
          {{company}}</p>
        {{/job}}
        {{^job}}
          <p class="unemployed">Available for Hire</p>
        {{/job}}
      </section>
      {{/users}}
    </section>
  </body>
</html>
